<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if redirectTo %}(Redirecting) {%endif%}{%if title %}{{ title | safe}} -{% endif %} {{ metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    {#- Redirect -#}
    {%- if redirectTo -%}
    <script>location = '{{redirectTo}}';</script>
    <meta http-equiv="refresh" content="0; url={{metadata.url}}{{redirectTo}}" />
    <link rel="canonical" href="{{metadata.url}}{{redirectTo}}" />
    <meta name="robots" content="noindex" />
    {%- endif -%}
    {#- Places I claim on the internet -#}
    <link rel="me" href="https://indieweb.social/@frills">
    <link rel="me" href="https://social.lol/@frills">
    <link rel="me" href="https://frills.omg.lol">
    {#- OpenGraph -#}
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{metadata.url}}{{page.url}}">
    <meta property="og:image" content="https://dynamic-og-image-generator.vercel.app//api/generate?title={{ title | safe }}&author={{ metadata.author.name }}&avatar={{ metadata.avatar }}&websiteUrl={{ metadata.url }}&theme=shadesOfPurple" />
    <meta property="og:image:alt" content="Page image for {{metadata.author.name}}">
    {# <meta name="description" content="{% if page.description %}{{ page.description | safe}}{% endif %}"> #}
    {# Favicon -#}
    <link rel="icon" type="image/png" href="/images/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/images/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    {# Style -#}
    <link href="/css/main.css?nocache=beep" rel="stylesheet">
    {% if style -%}
    <style>{{ style | safe }}</style>
    {%- endif %}
    {# Font -#}
    <link rel="preload" as="font" href="/fonts/atkinson-hyperlegible/regular.woff2" crossorigin>
    <noscript><link href="/css/noscript.css?nocache=beep" rel="stylesheet"></noscript>
</head>