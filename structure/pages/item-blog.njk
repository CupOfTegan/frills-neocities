{% extends "structure/templates/page-3col.njk" %}

{%- block main -%}
    {% import "structure/components/components.njk" as macro with context %}

    <article class="full-width">
        <div class="reading-width{% if tags.includes("weeknotes") %} headings-small{% endif %}">
            {{ content | safe }}
        </div>
    </article>
{%- endblock -%}

{%- block right -%}
    <ul class="unstyled">
        {% if tags.includes("weeknotes") %}
        {% else %}
        <li>Written on <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time></li>
        {% endif %}
        {% if tags %}
        <li>
            {%- for tag in tags | filterTagList %}
            <span class="tag">#{{ tag }}</span>{%- if not loop.last %} {% endif %}
            {%- endfor %}
        </li>
        {% endif %}
    </ul>
{%- endblock -%}

{% block scripts %}
{% endblock %}