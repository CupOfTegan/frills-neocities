.buttonwall{display:flex;flex-wrap:wrap;flex-direction:row;gap:1px;list-style-type:none;padding:0;margin:0 0 2rem}.buttonwall.--highcontrast .buttonwall__item{background:#fff!important;color:#4d0024!important;box-shadow:inset 0 0 0 1px #4d0024!important;text-decoration:underline!important}@media (prefers-color-scheme:dark){.buttonwall.--highcontrast .buttonwall__item{background:#4d0024!important;color:#fff!important;box-shadow:inset 0 0 0 1px #fff!important}}.buttonwall__item{width:80px;height:31px;background:#fff;display:flex;justify-content:center;align-items:center;text-align:center;transition:transform .4s;overflow:hidden;word-break:break-word;padding:0 4px;text-decoration:none;font-weight:700;font-size:12px;line-height:1.1}.buttonwall__item:active,.buttonwall__item:focus,.buttonwall__item:hover{transform:scale(1.1)}@media (min-width:767px){.buttonwall__item:active,.buttonwall__item:focus,.buttonwall__item:hover{transform:scale(2)}}
{%- endcss -%}
