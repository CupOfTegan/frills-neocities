{% extends 'page.njk'%}

    {%- css "defer" %}
        .buttonwall {
			display: flex;
			flex-wrap: wrap;
			flex-direction: row;
			gap: 1px;
			list-style-type: none;
			padding: 0;
			margin: 0;
		}
		.buttonwall__item {
			width: 80px;
			height: 31px;
			background: white;
			display: flex;
			justify-content: center;
			align-items: center;
			text-align: center;
			transition: 0.4s ease transform;
			overflow: hidden;
			word-break: break-word;
			text-decoration: none;
			font-weight: 700;
			padding: 0 4px;
		}
		.buttonwall__item:hover,
		.buttonwall__item:focus,
		.buttonwall__item:active {
			transform: scale(2);
		}
    {% endcss %}


